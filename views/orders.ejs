<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PickTheDishes</title>

  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/orders.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Yellowtail&display=swap" rel="stylesheet">
</head>
<body>
  <header><%- include('partials/_header.ejs'); %></header>
  <div class="content">
    <% for (const state of orderStates) { %>
      <div class="column" id="<%= state.toLowerCase() %>">
        <span><%= state %></span>
        <div class="orders">
          <% for (const order of orders) { %>
            <div class="order">
              <span class="header">
                <span class="name"><%= order.name %></span>
                <span class="order-id"><%= order.order_id %></span>
              </span>
              <span class="footer">
                <span class="start-time"><%= order.created_date.toLocaleTimeString('en-US') %></span>
                <span class="end-time"><%= (order.pickup_time.getTime() - order.created_date.getTime()) / 1000 %></span>
              </span>
            </div>
          <% } %>
        </div>
      </div>
     <% } %>
  </div>
</body>
</html>
