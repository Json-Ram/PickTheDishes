<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- internal css file -->
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/foods.css" />

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/scripts/foods_list.js"></script>
  </head>
  <body>
    <header class><%- include('partials/_header.ejs'); %></header>
    <div class="order-container">
      <div class="order-section categories">
        <h2>Categories</h2>
        <ul>
          <li><a href="#">Appetizers</a></li>
          <li><a href="#">Soup</a></li>
          <li><a href="#">Salads</a></li>
          <li><a href="#">Signature</a></li>
          <li><a href="#">Vegan</a></li>
          <li><a href="#">Drinks</a></li>
        </ul>
      </div>
      <div class="order-section">
        <% for(let category of categories) {%>
        <h3><%= category %></h3>
        <% for(let food of foods) { if (food.category === category) {%>
        <div class="food">
          <img src="" alt="" />
          <h4><%= food.name %></h4>
          <p><%= food.price %></p>
          <p><%= food.description %></p>
        </div>
        <% }} %> <% } %>
        <!-- modal -->
        <div class="modal">
          <div class="modal-content">
            <p>Decide your order quantity</p>
            <a href="#0" class="close">Close</a>
          </div>
        </div>
      </div>
      <div class="order-section cart">this is cart</div>
    </div>

    <!-- javascript -->
  </body>
</html>
